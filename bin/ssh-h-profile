#!/bin/sh -e
##:
#h: Usage: ssh-h-profile [-u PROFILE_FILE][-c CODE] SSH,...
#h:
#h: Add/update a "-- PROFILE --" section in ~/.profile in remote machines.
##:
ssh_h_profile() {
    local OPTIND optopt ml opt_u= opt_c=

    ## Parse command line arguments.
    while getopts "u:c:" optopt; do
        case $optopt in
            u)  opt_u="${OPTARG}";;
            c)  opt_c="${OPTARG}";;
            \?) return 1;;
        esac
    done
    shift $(( $OPTIND - 1 ))
    
    ## Calculate machine list.
    if which ssh-h-list >/dev/null 2>&1; then
        ml="$(ssh-h-list "$@")"
    else
        ml="$(echo "$*" | tr ',' ' ')"
    fi
    
    ## Operations.
    for ssh in ${ml}; do
        echo "== ${ssh}"
        if true; then
            test ! -n "${opt_u}" || dos2unix < "${opt_u}"
            echo "${opt_c}"
        fi | ssh -T "${ssh}" '
        echo "Updating ~/.profile ..."
        test ! -f ~/.profile || sed -i "/PROFILE/,/PROFILE/d" ~/.profile
        echo "## -- PROFILE --" >> ~/.profile
        cat                     >> ~/.profile
        echo "## -- PROFILE --" >> ~/.profile
        '
    done
}
## -------------------------------------------------------------------
if test @"${SCRNAME:-$(basename "$0")}" = @"ssh-h-profile"; then
    case "${1}" in
        ''|-h|--help) sed -n 's/^ *#h: \{0,1\}//p' "$0";;
        *)            ssh_h_profile "$@"; exit 0;;
    esac
fi
